alignment top_right
background yes
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
override_utf8_locale yes
xftfont Takao PGothic:style=Regular:size=9
xftalpha 1
gap_x 6
gap_y 6
maximum_width 300
minimum_size 300 1280
net_avg_samples 2
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type normal
own_window_transparent no
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
stippled_borders 0
update_interval 1
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
total_run_times 0
text_buffer_size 1024
#poll


TEXT
# =============================
#    以下、ウィジェット設定
# =============================
#
# ● マシン名
${voffset 4}${scroll 50 $sysname $kernel } uptime $uptime
#
# ● CPU使用率 上位7プロセス
${voffset 10}${font monospace:size=10}NAME               PID   CPU%   MEM%
${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${top name 5} ${top pid 5} ${top cpu 5} ${top mem 5}
${top name 6} ${top pid 6} ${top cpu 6} ${top mem 6}
${top name 7} ${top pid 7} ${top cpu 7} ${top mem 7}${font}
#
# ● CPU使用率
${voffset 5}${color ffffff}CPU ${cpu}% ${voffset -3} ${color ff0000} ${cpugraph cpu0 20,50} ${color 00ff00} ${cpugraph cpu1 20,50} ${color ffff00} ${cpugraph cpu2 20,50} ${color 0000ff} ${cpugraph cpu3 20,50}
#
# ● メモリ・HDD使用率
${voffset -5}${color ffffff}RAM ${mem} / ${memmax} ${voffset -3} ${memgraph 20,0}
${voffset -5}${color ffffff}HDD ${fs_used} / ${fs_size} ${voffset -2}${fs_bar 3,0}
#
# network
${voffset -10}
Networking: eth0 Up: ${upspeed eth0} - Down: ${downspeed eth0}
${upspeedgraph eth0 20,140} ${downspeedgraph eth0 20,140}
